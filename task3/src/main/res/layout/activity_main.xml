<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainLLayout"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sizeText"
        android:layout_marginTop="@dimen/marginTop"
        android:text="@string/header"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tvHeader"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/marginTop">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sizeText"
                android:text="@string/cb_red"
                android:id="@+id/cbRed"
                android:onClick="ClickCheckBox"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sizeText"
                android:text="@string/cb_green"
                android:id="@+id/cbGreen"
                android:onClick="ClickCheckBox"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sizeText"
                android:text="@string/cb_blue"
                android:id="@+id/cbBlue"
                android:onClick="ClickCheckBox"/>

        </LinearLayout>

</LinearLayout>